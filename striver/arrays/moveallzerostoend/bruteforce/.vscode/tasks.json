{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++17",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/myapp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compile C++17 code using g++ in WSL"
        },
        {
            "label": "Run C++ (Interactive)",
            "type": "shell",
            "command": "${fileDirname}/myapp",
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Run C++ (With input.txt â†’ output.txt)",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "${fileDirname}/myapp < ${fileDirname}/input.txt > ${fileDirname}/output.txt"
            ],
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        }
    ]
}