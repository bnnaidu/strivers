{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (WSL gdb) - C++17",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/myapp", // compiled binary
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "build", // see tasks.json below
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb", // gdb inside WSL
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}